@page
@model ApproveExpensesModel
@{
    ViewData["Title"] = "Approve Expenses";
}

<div class="page-header">
    <h2>✅ Approve Expenses</h2>
    @if (Model.UsingDummyData)
    {
        <div class="badge badge-warning">Using Sample Data</div>
    }
</div>

@if (Model.PendingExpenses.Any())
{
    <div class="pending-count">
        <strong>Pending Expenses:</strong> @Model.PendingExpenses.Count
    </div>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>User</th>
                    <th>Category</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model.PendingExpenses)
                {
                    <tr>
                        <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                        <td>@expense.UserName</td>
                        <td>@expense.CategoryName</td>
                        <td>@expense.Currency @expense.AmountDecimal.ToString("N2")</td>
                        <td>@expense.Description</td>
                        <td>
                            <form method="post" style="display:inline;">
                                <input type="hidden" name="expenseId" value="@expense.ExpenseId" />
                                <button type="submit" asp-page-handler="Approve" class="btn btn-success btn-sm">
                                    ✓ Approve
                                </button>
                                <button type="submit" asp-page-handler="Reject" class="btn btn-danger btn-sm">
                                    ✗ Reject
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="summary">
        <strong>Total Pending Amount:</strong> £@Model.PendingExpenses.Sum(e => e.AmountDecimal).ToString("N2")
    </div>
}
else
{
    <div class="empty-state">
        <p>✓ No pending expenses to approve</p>
        <a href="/Index" class="btn btn-secondary">View All Expenses</a>
    </div>
}
